[Unit]
Description=Run the home lab node configuration service
After=network-online.target
Wants=network-online.target

[Service]
EnvironmentFile="{{ home_lab_host_configuration_service_environment_file_destination_path }}"
ExecStart={{ home_lab_configuration_directory_path }}/scripts/run-ansible.sh
WorkingDirectory={{ home_lab_configuration_directory_path }}

[Install]
WantedBy=multi-user.target

[Unit]
Description=Run the home lab node configuration service
Requires=docker.service

[Service]
Environment="ADDITIONAL_ANSIBLE_FLAGS=-CD --extra-vars \"ansible_connection=local\" --limit {{ inventory_hostname }}"
Environment="ANSIBLE_HOME={{ home_lab_configuration_directory_path }}/config/ansible"
ExecStart={{ home_lab_configuration_directory_path }}/scripts/run-ansible.sh
WorkingDirectory={{ home_lab_configuration_directory_path }}

[Install]
WantedBy=multi-user.target

---
services:
  mosquitto:
    container_name: mosquitto
    image: eclipse-mosquitto:2.0.15-openssl
    # Enable host networking to listen on the host's localhost interface
    network_mode: host
    restart: always
    volumes:
      - ./config:/mosquitto/config
      - {{ mosquitto_data_directory_path }}:/mosquitto/data
      - {{ mosquitto_log_directory_path }}:/mosquitto/log
    ports:
      - "1883:1883"
...

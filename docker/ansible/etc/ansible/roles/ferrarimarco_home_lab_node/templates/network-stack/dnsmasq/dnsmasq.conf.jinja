# All reverse lookups for private IPs that are not found in the configured hosts
# file will be returned as “no such domain” and not forwarded to the upstream
# servers
bogus-priv

# Don't pass short names to the upstream DNS servers
domain-needed

# Configure the local domain is local and it may answer queries from /etc/host
# or DHCP to avoid forwarding queries on that domain to any upstream servers
local=/{{ edge_environment_root_fqdn }}/

# Forward queries to the authoritative DNS server for the main zone
server=/{{ root_fqdn }}/{{ root_dns_servers[0].ipv4_address }}

---
global:
  evaluation_interval: 1m
  scrape_interval: 30s

scrape_configs:
  - job_name: "grafana"
    static_configs:
      - targets:
        - "grafana:3000"

  - job_name: "prometheus"
    scrape_interval: 5s
    static_configs:
      - targets:
        - "localhost:9090"

  - job_name: "node_exporter"
    static_configs:
      - targets:
{% for host in groups['all'] %}
        - "{{ host }}:9100"
{% endfor %}
...
